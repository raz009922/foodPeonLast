<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:padding="8dp"
        android:elevation="2dp"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/food1"
            android:padding="6dp"
            android:scaleType="fitCenter" />

        <TextView
            android:padding="1dp"
            android:layout_margin="2dp"
            android:id="@+id/textView1"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:background="@color/colorPrimary"
            android:layout_alignParentEnd="true"

            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:text="4.2*"
            android:textColor="@color/white"
            android:textAlignment="center"

            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:padding="1dp"
            android:layout_margin="2dp"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:background="@color/white"
            android:text="04     Hrs"
            android:textStyle="bold"
            android:textColor="@color/textColor"

            android:textAlignment="center"
            android:layout_alignEnd="@+id/textFoodRating"
            android:layout_alignRight="@+id/textFoodRating"
            android:layout_below="@+id/textView1" />


        <TextView

            android:id="@+id/textFoodName"
            android:paddingTop="26dp"
            android:paddingBottom="12dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:textSize="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView"
            android:hint="Food Name" />

        <TextView
            android:id="@+id/textFoodRating"
            android:paddingTop="28dp"
            android:paddingBottom="12dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:textSize="14sp"
            android:text="4.8"
            android:textColor="@color/colorPrimary"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/imageView"
            android:hint="Rating" />

        <TextView
            android:id="@+id/textFoodCat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textFoodName"
            android:hint="Category Names"
            android:paddingBottom="24dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="14sp" />
    </RelativeLayout>


    </android.support.v7.widget.CardView>









